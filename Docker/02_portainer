# Portainer.io HTTP

# Vytvoreni dat 
docker volume create portainer_data

# Spusťte Portainer s Dockerem 
docker run -d -p 9000:9000 --name portainer \
	--restart=always \
	-v /var/run/docker.sock:/var/run/docker.sock \
	-v portainer_data:/data portainer/portainer-ce


#Portainer.io HTTPS

# Vytvoreni dat 
docker volume create portainer_data
 

# Vytvoření Self-Signed Certifikátu
openssl req -x509 -newkey rsa:4096 -keyout portainer.key -out portainer.crt -days 365 -nodes

#Tento příkaz vytvoří 4096-bit RSA klíč (portainer.key) a self-signed certifikát #(portainer.crt) platný po dobu 365 dní.
# - Parametr -nodes zajistí, že soukromý klíč nebude chráněn heslem. To je užitečné pro automatizované procesy, ale mějte na paměti bezpečnostní rizika.
# - Během procesu budete vyzváni k zadání informací, jako je země, organizace atd. Tyto údaje jsou součástí certifikátu.

# Přesuňte Certifikát a Klíč do Bezpečného Adresáře 
sudo mkdir -p /etc/portainer/certs
sudo mv portainer.crt /etc/portainer/certs/
sudo mv portainer.key /etc/portainer/certs/

# Spusťte Portainer s Dockerem 
docker run -d -p 9443:9443 --name portainer \
	--restart=always \
	-v /etc/portainer/certs/portainer.crt:/certs/portainer.crt \
	-v /etc/portainer/certs/portainer.key:/certs/portainer.key \
	-v portainer_data:/data portainer/portainer-ce \
	--ssl --sslcert /certs/portainer.crt --sslkey /certs/portainer.key
